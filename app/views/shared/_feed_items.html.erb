
<li id="<%= feed_items.id %>" class="microposts">
    <div class="row mg-tp10">

        <div class="small-12 columns">
          <div class="row">
            <div class="medium-1 columns">
              <%= link_to gravatar_for(feed_items.user), feed_items.user %>
            </div>

            <div class="medium-2 end columns">
              <%= link_to feed_items.user.name, feed_items.user %>
            </div>
          </div>
        </div>

        <div class="small-12 columns mg-tp10">
          <%= feed_items.content %>
        </div>
        <span class="small-12 columns timestamp">
          Posted <%= time_ago_in_words(feed_items.created_at) %> ago.
        </span>
    </div>

    <% if current_user?(feed_items.user) %>
      <%= link_to 'delete', feed_items, method: :delete, 
                                        data: {confirm: 'You sure'}, title: feed_items.content %>
    <% end %>
</li>