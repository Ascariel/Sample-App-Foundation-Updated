<%= provide(:title, 'Sign in') %>

<div class="row">
<div class="small-6 small-offset-2 columns end">

    <h1 class="lead-title">Sign in</h1>

    <%= form_for(:sessions, url: sessions_path) do |f| %>

     <%= f.label 'email' %>
     <%= f.text_field :email %>

     <%= f.label 'password' %>
     <%= f.password_field :password %>

     <%= f.submit 'Sign in', class: 'button success' %>

    <% end %>

    <div><p>New user? <%= link_to 'Sign up now!', new_user_path %></p></div>
  </div>
</div>


