<%# provide(:title, 'Home') %>

<% if sign_in? %>

  <div class="row margin-top">
    <div class="small-12 medium-4 columns">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </div>

    <div class="small-12 medium-8 columns">
      <h2 class="text-center">Microposts</h1>
        <br><br>
      <%= render partial: 'shared/feed' %>
    </div>

  </div>

<% else %>

  <div class="panel row main-panel text-center">
    <div class="main-panel small-12 columns">
      <h1><b>Welcome to the Sample app</b></h1>
      <p class="panel-subtitle"> 
        This is the home page for the <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
        sample application.
      </p>
      <%= link_to("Sign Up Now!", new_user_path, class: 'button' ) %>

    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <%= link_to image_tag("rails.png", alt: "Rails") %>
    </div>
  </div>
  
<% end %>
