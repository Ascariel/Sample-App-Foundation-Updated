  gem 'sqlite3'
  gem 'rspec-rails' 
  #Needed for Spork
  gem 'spork-rails'
  gem 'guard-spork'
  gem 'childprocess'
  gem 'awesome_print'
end

group :test do
  gem 'selenium-webdriver'
  gem 'capybara'
  gem 'factory_girl_rails'#, '4.2.0'
end

gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'

group :doc do
  gem 'sdoc', '0.3.20', require: false
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end







